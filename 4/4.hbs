<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tampilan</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

</head>

<body>
    <Nav style="background-color: gray; height: 80px; height: max-content;">
        <div class="d-flex justify-content-center pt-2">
            <h3>Provinsi dan Kabupaten</h3>
        </div>
        <div class="d-flex justify-content-end">
            <a href="/addpr" class="btn-outline-dark mx-2">Add Provinsi</a>
            <a href="/addkb" class="btn-outline-light mx-2">Add kabupaten</a>
        </div>
        <select name="select" id="select" onchange="onChangeFile()">
            <option value="provinsi">Provinsi</option>
            <option value="kabupaten">Kabupaten</option>
        </select>
    </Nav>

    <h3 class="d-flex justify-content-center my-3">List Provinsi</h3>
    <div class="d-flex flex-wrap" style="width: 100%;">
    {{#each dataprov}}
    <div class="container" style="width: 300px;">
    <div class="card mb-4 my-4">
        <div class="px-3 shadow-sm " style="height:max-content;">
            <img src="./uploads/{{this.photo}}" alt="photo prov" class="object-fit-cover mt-3" width="100%" height="200px">
            <p class="card-text text-center font-weight-bold mt-3">{{this.nama}}</p>
            <p class="card-text text-center ">{{this.diresmikan}}</p>
            <div class="d-flex justify-content-center">
            <a href="/detailpr/{{this.id}}"><button class="btn btn-secondary mx-2 my-2">Detail</button></a>
            </div>
        </div>
    </div>
    </div>
    {{/each}}
    </div>

     <h3 class="d-flex justify-content-center my-3">List Kabupaten</h3>
     <div class="d-flex flex-wrap" style="width: 100%;">
    {{#each datakab}}
    <div class="container" style="width: 300px;">
    <div class="card mb-4 my-4">
        <div class="px-3 shadow-sm " style="height:max-content;">
            <img src="./uploads/{{this.photo}}" alt="photo prov" class="object-fit-cover mt-3" width="100%" height="200px">
            <p class="card-text text-center font-weight-bold mt-3">{{this.Nama}}</p>
            <p class="card-text text-center ">{{this.diresmikan}}</p>
            <div class="d-flex justify-content-center">
            <a href="/detailkb/{{this.id}}"><button class="btn btn-secondary mx-2 my-2">Detail</button></a>
            </div>
        </div>
    </div>
    </div>
    {{/each}}
    </div>


</body>
<script>

    let val = "provinsi"
    function onChangeFile() {
        let valSelect = document.getElementById("select");
        val = valSelect.value ? valSelect.value : "provinsi"
    }
</script>

</html>